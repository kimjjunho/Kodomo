<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainText">
        <item name="android:textColor">@color/black3A</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">46dp</item>
    </style>
    
    <style name="widthLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grayE7</item>
    </style>

    <style name="verticalLineAll">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grayE7</item>
    </style>

    <style name="verticalLineTop">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">184dp</item>
        <item name="android:background">@color/grayE7</item>
    </style>

    <style name="verticalLineBottom">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">138dp</item>
        <item name="android:background">@color/grayE7</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="classCount">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:textColor">@color/gray7B</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="day_of_week_text">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray7B</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_btn">
        <item name="android:layout_width">56.5dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">#00ff0000</item>
    </style>

    <style name="signup_text_background">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/signup_text_background</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black24</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="radio_button">
        <item name="colorAccent">@color/main_color</item>
        <item name="colorControlNormal">@color/grayE7</item>
    </style>

</resources>