                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="46dp">

                        <Button
                            android:id="@+id/btn_monday7"
                            style="@style/main_btn" />


                        <Button
                            android:id="@+id/btn_tuesday7"
