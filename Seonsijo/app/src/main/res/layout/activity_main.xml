                        <Button
                            android:id="@+id/btn_friday1"
                            style="@style/main_btn" />
                        android:text="수학" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="46dp">

                        <Button
                            android:id="@+id/btn_monday2"
                            style="@style/main_btn" />

                        <Button
                            android:id="@+id/btn_tuesday2"
                            style="@style/main_btn" />

                        <Button
