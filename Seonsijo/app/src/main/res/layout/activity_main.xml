                <LinearLayout
                    android:id="@+id/linearLayout_vertical_line"
                    android:layout_width="280dp"
                    android:layout_height="368dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
